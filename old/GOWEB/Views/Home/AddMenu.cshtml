
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>



    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/fonts/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <h2 class="demo-text">Add Menu</h2>
            <div class="container ">
                <div class="row">
                    <div class="col-md-12">
                        <h3>Add Menu</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 ">

                        Menu name:
                    </div>
                    <div class="col-md-3 ">
                       <input type="text"/>
                    </div>
                    <div class="col-md-2 ">

                        Menu url:
                    </div>
                    <div class="col-md-3 ">
                        <input type="text" />
                    </div>
                    <div class="col-md-1 ">

                        Has Child:
                    </div>
                    <div class="col-md-1 ">
                        <input id="isChild" type="checkbox" title="Has A Child" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 ">

                        Parent Menu Name:
                    </div>
                    <div class="col-md-3 ">
                        <select class="MenuID"></select>
                    </div>
                    <div class="col-md-2">
                        Code:
                    </div>
                    <div class="col-md-3">
                        <input type="text"/>
                    </div>
                    <div class="col-md-1 ">

                        ADD:
                    </div>
                    <div class="col-md-1">
                        <input type="button" value="ADD" id="btnAdd" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <h3>Edit Menu</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">

                        Menu Name:
                    </div>
                    <div class="col-md-3 ">
                        <select class="MenuID"></select>
                    </div>
                    <div class="col-md-2 ">

                        Edit Menu Name:
                    </div>
                    <div class="col-md-3 ">
                        <input type="text" />
                    </div>

                </div>
                <div class="row margin-top10">
                    <div class="col-md-2 ">

                        Edit Menu URL:
                    </div>
                    <div class="col-md-3 ">
                        <input type="text" />
                    </div>
                    <div class="col-md-2">
                        Code:
                    </div>
                    <div class="col-md-3">
                        <input type="text" />
                    </div>
                    <div class="col-md-1 ">

                        ADD:
                    </div>
                    <div class="col-md-1">
                        <input type="button" value="Edit" id="btnEdit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script type="text/javascript">
    $(document).ready(function () {
        var MenuIDs = 0;

        $.getJSON("/Learning/LoadMenu", function (data) {
            console.log(data.Data)

            $.each(data.Data, function (index, value) {
                // APPEND OR INSERT DATA TO SELECT ELEMENT.


                $('.MenuID').append('<option value="' + value.MenuID + '">' + value.MenuName + '</option>');
            });
        });

        $(".MenuID").change(function () {
            MenuIDs = $(this).val();
        })


        $("#btnAdd").click(function () {

            


        });
        function submissionSucceeded() {
            console.log("Ok")
        }
        function submissionFailed() {
            console.log("Failed")
        }

    });





</script>